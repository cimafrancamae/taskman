<div class="p-4 sm:ml-64 mt-14">
  <div class="mb-16">
    <h1 class="text-3xl font-semibold mb-4">
      <%= @category.name.capitalize %>
    </h1>
    <div class="flex space-x-2 ">
      <%= link_to "Edit", edit_category_path(@category), 
        class: "text-xs border border-gray-500 text-gray-500 py-1 px-4 rounded hover:bg-indigo-300" %>
      <%= button_to "Delete", category_path(@category), 
        method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" }, 
        class: "text-xs border border-gray-500 text-gray-500 py-1 px-4 rounded hover:bg-red-300" %>
    </div>
  </div>

  <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 ">
    <% if @category.tasks.any? %>
    <ul role="list" class="divide-y divide-gray-100 ">
      <% @category.tasks.each do |task| %> 
        <li class="flex justify-between gap-x-6 py-5 px-4 hover:bg-gray-100">
          <div class="flex min-w-0 gap-x-4">
            <div class="min-w-0 flex-auto">
              <p class="text-sm font-semibold leading-6 text-gray-900">
                <%= link_to task.title, task %>
              </p>
              <p class="mt-1 truncate text-xs leading-5 text-gray-500">
                <%= task.content %>
              </p>
            </div>
          </div>
          <div class="shrink-0 sm:flex sm:flex-col sm:items-end">
            <p class="text-sm leading-6 text-gray-900">
              <%= task.category.name %>
            </p>
            <% if task.completed %>
              <div class="mt-1 flex items-center gap-x-1.5">
                <div class="flex-none square-full bg-emerald-500/20 p-1">
                  <div class="h-1.5 w-1.5 square-full bg-emerald-500"></div>
                </div>
                <p class="text-xs leading-5 text-gray-500">Completed</p>
              </div>
            <% else %>
              <p class="mt-1 text-xs leading-5 text-gray-500">
                Due: <%= task.due_date.to_date == Date.today ? 'Today' : task.due_date.to_date == Date.tomorrow ? 'Tomorrow' : task.due_date.to_formatted_s(:long) %>
              </p>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
    <% else %>
      <p class="text-gray-500 text-center">No Tasks for this Category</p>
    <% end %>
  </div>
</div>
