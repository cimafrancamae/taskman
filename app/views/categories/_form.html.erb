<div class="p-4 sm:ml-64">
  <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 mt-14">
    <%= form_with model: category, html: { class: "mb-8" } do |form| %>
      <% if category.errors.any? %>
        <div class="text-red-500 mb-4">
          <ul>
            <% category.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="flex items-center  gap-4">
        <div class="flex items-center gap-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 p-3 w-full border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
        </div>

        <div class="text-center">
          <%= form.submit class: "py-3 px-6 bg-blue-500 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue active:bg-blue-800" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
