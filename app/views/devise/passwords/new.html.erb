<div class="max-w-md mx-auto mt-14">
  <h2 class="text-2xl font-semibold mb-6 text-center">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mb-8" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-3 w-full border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="text-center">
      <%= f.submit "Send me reset password instructions", class: "py-3 px-6 bg-blue-500 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue active:bg-blue-800" %>
    </div>
  <% end %>

  <div class="flex items-center justify-center gap-1">
    <%= render "devise/shared/links" %>
  </div>
</div>
