<div class="max-w-md mx-auto">
  <h2 class="text-2xl font-semibold mb-6 text-center">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-8" }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-3 w-full border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 p-3 w-full border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-sm text-gray-700" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= f.submit "Log in", class: "py-3 px-6 bg-blue-500 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue active:bg-blue-800" %>
    </div>
  <% end %>

  <div class="flex items-center justify-center gap-1">
    <%= render "devise/shared/links" %>
  </div>
</div>
