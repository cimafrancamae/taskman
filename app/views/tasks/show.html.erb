<div class="p-4 sm:ml-64">
  <div class="mt-14">
    <h1 class="text-3xl font-semibold mb-4">
      Task
    </h1>
    <div class="mb-4">
      <% unless @task.completed %>
          <%= button_to mark_complete_task_path(@task), method: :put, data: { turbo_method: :put, confirm: "Mark this task as complete?" }, class: "flex text-xs items-center border border-green-700 text-green-700 py-2 px-4 rounded transition duration-300 ease-in-out hover:bg-green-300" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Mark as Complete
          <% end %>
      <% end %>
      </div>
  </div>
  <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">

  <div class="px-4 sm:px-0">
    <div class="flex justify-between">
      <h3 class="text-base font-semibold leading-7 text-gray-900"><%= @task.title.capitalize %></h3>
      <div class="flex space-x-2">
        <%= link_to "Edit", edit_task_path(@task), class: "border border-indigo-700 text-xs text-indigo-700 px-4 py-2 rounded hover:bg-indigo-200" %>
        <%= button_to "Delete", task_path(@task), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" }, class: "border border-red-700 text-red-700 text-xs py-2 px-4 rounded hover:bg-red-200" %>
      </div>
    </div>
    <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500"><%= @task.completed ? 'Completed' : 'Pending' %></p>
  </div>

    <div class="mt-6 border-t border-gray-100">
      <dl class="divide-y divide-gray-100">
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium leading-6 text-gray-900">Due Date</dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
            <%= @task.due_date.to_date == Date.today ? 'Today' 
            : @task.due_date.to_date == Date.tomorrow ? 'Tomorrow' 
            : @task.due_date.to_formatted_s(:long) %>
          </dd>
        </div>
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium leading-6 text-gray-900">Category</dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @task.category.name.capitalize %></dd>
        </div>
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium leading-6 text-gray-900">Description</dt>
          <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @task.content %></dd>
        </div>
      </dl>
    </div>
  </div>
</div>
