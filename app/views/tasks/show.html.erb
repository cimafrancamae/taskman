<%= render partial: 'task', locals: { task: @task } %>

<div class="flex space-x-2">
  <%= link_to "Edit", edit_task_path(@task), class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700" %>
  <%= button_to "Delete", task_path(@task), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" }, class: "bg-red-500 text-white py-2 px-4 rounded hover:bg-red-700" %>
</div>

