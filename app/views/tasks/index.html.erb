<div class="p-4 sm:ml-64 mt-14">
    <h1 class="text-3xl font-semibold mb-6">Tasks</h1>
  

    <div data-controller="reveal" data-reveal-hidden-class="d-none" data-accordion="collapse" data-active-classes="bg-white dark:bg-gray-900 text-gray-900 dark:text-white" data-inactive-classes="text-gray-500 dark:text-gray-400">
      
    <!-- Tasks Due Today Accordion -->
    <div class="p-4 mb-8 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 ">
    <h2 id="accordion-flush-heading-1">
      <button data-action="click->reveal#toggle" type="button" class="flex items-center justify-between w-full py-5 font-medium rtl:text-right text-red-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-accordion-target="#accordion-flush-body-1" aria-expanded="true" aria-controls="accordion-flush-body-1">
        <span>Due Today</span>
        <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5" />
        </svg>
      </button>
    </h2>
    <div data-reveal-target="item" id="accordion-flush-body-1" class="hidden" aria-labelledby="accordion-flush-heading-1" data-reveal-hidden="false">
      <div class="py-5 border-b border-gray-200 dark:border-gray-700">
        <%= render partial: 'task', collection: @tasks_today %>
      </div>
    </div>
    </div>

    <!-- Completed Tasks Accordion -->
    <div class="p-4 mb-8 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 ">
    <h2 id="accordion-flush-heading-2">
      <button data-action="click->reveal#toggle" type="button" class="flex items-center justify-between w-full py-5 font-medium rtl:text-right text-green-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-accordion-target="#accordion-flush-body-2" aria-expanded="true" aria-controls="accordion-flush-body-2">
        <span>Completed</span>
        <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5" />
        </svg>
      </button>
    </h2>
    <div data-reveal-target="item" id="accordion-flush-body-2" aria-labelledby="accordion-flush-heading-2" data-reveal-hidden="false">
      <div class="py-5 border-b border-gray-200 dark:border-gray-700">
        <%= render partial: 'task', collection: @completed_tasks %>
      </div>
    </div>
    </div>

    <!-- All Tasks Accordion -->
    <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 ">
    <h2 id="accordion-flush-heading-3">
      <button data-action="click->reveal#toggle" type="button" class="flex items-center justify-between w-full py-5 font-medium rtl:text-right text-blue-500 border-b border-gray-200 dark:border-gray-700 dark:text-gray-400 gap-3" data-accordion-target="#accordion-flush-body-3" aria-expanded="true" aria-controls="accordion-flush-body-3">
        <span>All Tasks</span>
        <svg data-accordion-icon class="w-3 h-3 rotate-180 shrink-0" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5" />
        </svg>
      </button>
    </h2>
    <div data-reveal-target="item" id="accordion-flush-body-3" aria-labelledby="accordion-flush-heading-3" data-reveal-hidden="false">
      <div class="py-5 border-b border-gray-200 dark:border-gray-700">
        <%= render partial: 'task', collection: @tasks %>
      </div>
    </div>
    </div>

  </div>
</div>
